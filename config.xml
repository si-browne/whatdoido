<?xml version='1.0' encoding='utf-8'?>
<widget id="com.finalyear.quickclaims" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Quickclaims</name>
    <description>
        Quickclaims, a mobile application that provides assistance during a road traffic accident and allows insurance claims to be submitted.
    </description>
    <author email="b7033055@my.shu.ac.uk" href="http://www.shu.ac.uk">
        Simon Browne
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="Orientation" value="portrait" />
    <preference name="BackgroundColor" value="0xff0072CE"/>
    <preference name="AutoHideSplashScreen" value="true" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
